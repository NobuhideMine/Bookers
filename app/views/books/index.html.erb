<h1><strong>Books</strong></h1>

<% @books.each do |book| %>

    <table>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
        </tr>
    </table>
    
<% end %>

<p><%= link_to "Show", book_path(@book.id) %></p>
<p><%= link_to "Edit", edit_book_path(@book.id) %></p>
<p><%= link_to "destroy" </p>


<h2>New book</h2>

<%= form_with model: @book do |f| %>
    
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
        
        
<% end %>