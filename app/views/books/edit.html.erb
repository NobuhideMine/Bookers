<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>

    <%= f.submit 'Update Book' %>

<% end %>
 
 <div class="edit-nav">
     <p><%= link_to "Show", book_path(@book.id) %></p>
